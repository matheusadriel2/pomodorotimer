<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="24.0" styleClass="timer-container" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.matheusadriel.pomodorotimer.SettingsController">
    <children>
        <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="Settings" />
        
        <VBox alignment="CENTER" spacing="16.0" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 12px; -fx-padding: 24px;">
            <HBox alignment="CENTER_RIGHT" spacing="16.0">
                <Label style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 14px;" text="Focus Duration (min)" />
                <Spinner fx:id="focusDurationSpinner" editable="true" prefWidth="100.0" styleClass="settings-spinner" />
            </HBox>
            
            <HBox alignment="CENTER_RIGHT" spacing="16.0">
                <Label style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 14px;" text="Short Break (min)" />
                <Spinner fx:id="shortBreakSpinner" editable="true" prefWidth="100.0" styleClass="settings-spinner" />
            </HBox>
            
            <HBox alignment="CENTER_RIGHT" spacing="16.0">
                <Label style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 14px;" text="Long Break (min)" />
                <Spinner fx:id="longBreakSpinner" editable="true" prefWidth="100.0" styleClass="settings-spinner" />
            </HBox>
            
             <HBox alignment="CENTER_RIGHT" spacing="16.0">
                <Label style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 14px;" text="Long Break Interval" />
                <Spinner fx:id="longBreakAfterSpinner" editable="true" prefWidth="100.0" styleClass="settings-spinner" />
            </HBox>
        </VBox>
        
        <HBox alignment="CENTER" spacing="20.0">
            <Button onAction="#onCancel" styleClass="icon-button" text="Cancel" style="-fx-background-color: transparent; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-padding: 8px 24px; -fx-min-width: 100px; -fx-font-size: 14px; -fx-border-width: 1px;" />
            <Button onAction="#onSave" styleClass="start-button" text="Save" style="-fx-padding: 8px 32px; -fx-font-size: 14px; -fx-min-width: 100px;" />
        </HBox>
    </children>
    <padding>
        <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
    </padding>
</VBox>
