<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.matheusadriel.pomodorotimer.TimerController" stylesheets="@styles.css">
   <VBox alignment="TOP_CENTER" spacing="12.0" styleClass="timer-container">
   <HBox fx:id="titleBar" alignment="CENTER_RIGHT" styleClass="header-bar" onMousePressed="#onTitleBarPressed" onMouseDragged="#onTitleBarDragged">
            <Region HBox.hgrow="ALWAYS" /> <!-- Draggable area -->
            
            <!-- Minimize Button -->
            <Button fx:id="minimizeButton" mnemonicParsing="false" onAction="#onMinimizeClick" styleClass="window-button">
               <graphic>
                  <javafx.scene.shape.SVGPath content="M6 19h12v2H6z" fill="#a0a0a0" scaleX="0.9" scaleY="0.9"/>
               </graphic>
            </Button>

            <!-- Mini Mode Button (Always on Top mini window) -->
            <Button fx:id="miniButton" mnemonicParsing="false" onAction="#onMiniButtonClick" styleClass="window-button">
               <graphic>
                  <javafx.scene.shape.SVGPath content="M19 11h-8v6h8v-6zm4 8V4.98C23 3.88 22.1 3 21 3H3c-1.1 0-2 .88-2 1.98V19c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2zm-2 .02H3V4.97h18v14.05z" fill="#a0a0a0" scaleX="0.8" scaleY="0.8"/>
               </graphic>
            </Button>
            
            <!-- Close Button -->
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#onCloseClick" styleClass="close-button">
               <graphic>
                  <javafx.scene.shape.SVGPath content="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" fill="#a0a0a0" scaleX="0.9" scaleY="0.9"/>
               </graphic>
            </Button>
         </HBox>


         <!-- Container do timer com anel de progresso -->
         <StackPane fx:id="progressContainer" prefHeight="322.0" prefWidth="322.0">
            <!-- Anel de progresso será adicionado programaticamente -->
            
            <!-- Display do tempo -->
            <VBox alignment="CENTER" spacing="8.0">
               <Label fx:id="timeLabel" text="25:00" styleClass="time-display" />
            </VBox>
         </StackPane>
         
         <!-- Botões de tempo pré-definido -->
         <HBox fx:id="timeButtonsContainer" alignment="CENTER" spacing="16.0" styleClass="time-presets-container">
            <!-- Será preenchido dinamicamente -->
         </HBox>
         
         <!-- Spacer to push controls to bottom -->
         <Region VBox.vgrow="ALWAYS" />
         
         <!-- Botões de controle -->
         <HBox alignment="CENTER" spacing="16.0" styleClass="controls-container">

               <!-- Botão Settings (Material Settings) -->
               <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#onSettingsButtonClick" styleClass="icon-button">
                  <graphic>
                     <javafx.scene.shape.SVGPath content="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41 h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.8,11.69,4.8,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54 c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z" fill="white" scaleX="1.08" scaleY="1.08"/>
                  </graphic>
               </Button>

               <!-- Botão Start/Pause (Round Icon Button) -->
               <Button fx:id="startPauseButton" mnemonicParsing="false" onAction="#onStartPauseButtonClick" styleClass="start-button">
                  <graphic>
                      <!-- Initial Play Icon -->
                     <javafx.scene.shape.SVGPath content="M8 5v14l11-7z" fill="#1a1a1a" scaleX="1.35" scaleY="1.35"/>
                  </graphic>
               </Button>
               
               <!-- Botão Reset (Material Refresh) -->
               <Button fx:id="resetButton" mnemonicParsing="false" onAction="#onResetButtonClick" styleClass="icon-button">
                  <graphic>
                     <javafx.scene.shape.SVGPath content="M17.65,6.35C16.2,4.9,14.21,4,12,4c-4.42,0-7.99,3.58-7.99,8s3.57,8,7.99,8c3.73,0,6.84-2.55,7.73-6h-2.08 c-0.82,2.33-3.04,4-5.65,4c-3.31,0-6-2.69-6-6s2.69-6,6-6c1.66,0,3.14,0.69,4.22,1.78L13,11h7V4L17.65,6.35z" fill="white" scaleX="1.08" scaleY="1.08"/>
                  </graphic>
               </Button>

         </HBox>

   </VBox>
</StackPane>
